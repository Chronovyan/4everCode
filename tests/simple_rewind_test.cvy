// Simple REWIND_FLOW test

// Main program
PRINT "=== Simple REWIND_FLOW Test ===";

// Test variables
var counter = 0;

// Basic REWIND_FLOW
PRINT "Starting REWIND_FLOW test with HALT_REWIND";
PRINT "Initial counter: " + counter;

REWIND_FLOW (counter < 5) {
    counter = counter + 1;
    PRINT "Iteration: " + counter;
    
    // Halt when counter reaches 3
    IF (counter == 3) {
        PRINT "Counter reached 3, halting";
        HALT_REWIND;
    }
}

PRINT "Final counter: " + counter;
PRINT "Test completed"; 