site_name: Chronovyan Documentation
site_description: Comprehensive documentation for the Chronovyan Temporal Programming Language
site_author: Chronovyan Team
site_url: https://chronovyan.dev

# Theme
# theme: readthedocs
theme:
  name: material
  features:
    - navigation.tabs
    - navigation.tabs.sticky
    - navigation.sections
    - navigation.top
    - search.highlight
    - search.suggest
    - content.code.annotate
    - content.code.copy
    - content.tooltips
    - navigation.footer
    - navigation.indexes
  palette:
    - scheme: default
      primary: indigo
      accent: indigo
      toggle:
        icon: material/weather-night
        name: Switch to dark mode
    - scheme: slate
      primary: indigo
      accent: indigo
      toggle:
        icon: material/weather-sunny
        name: Switch to light mode
  font:
    text: Roboto
    code: Roboto Mono
  favicon: assets/favicon.ico
  logo: assets/logo.png

# Repository
repo_name: chronovyan/chronovyan
docs_dir: docs
site_dir: site

# Extensions
markdown_extensions:
  - admonition
  - pymdownx.details
  - pymdownx.superfences
  - pymdownx.tabbed
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.inlinehilite
  - pymdownx.snippets
  - pymdownx.smartsymbols
  - pymdownx.superfences
  - attr_list
  - md_in_html
  - pymdownx.emoji:
      emoji_index: !!python/name:materialx.emoji.twemoji
      emoji_generator: !!python/name:materialx.emoji.to_svg
  - pymdownx.tabbed:
      alternate_style: true
  - pymdownx.tilde
  - toc:
      permalink: true

# Navigation
nav:
  - Home: index.md
  - Getting Started:
    - Installation: getting-started/installation.md
    - Quick Start: getting-started/quick-start.md
    - Tutorials: getting-started/tutorials.md
  - Language Reference:
    - Syntax: language/syntax.md
    - Types: language/types.md
    - Variables: language/variables.md
    - Control Flow: language/control-flow.md
    - Functions: language/functions.md
  - Temporal Programming:
    - Concepts: temporal-programming/concepts.md
    - Resource Management: temporal-programming/resource-management.md
    - Paradox Avoidance: temporal-programming/paradox-avoidance.md
  - Advanced Topics:
    - Type System: advanced/type-system.md
    - Metaprogramming: advanced/metaprogramming.md
    - Performance: advanced/performance.md
  - API Reference:
    - Standard Library: api/standard-library.md
    - Runtime API: api/runtime.md
    - Compiler API: api/compiler.md
  - Development:
    - Building: development/building.md
    - Contributing: development/contributing.md
    - Code Style: development/code-style.md
    - Testing: development/testing.md
  - Community:
    - Code of Conduct: community/code-of-conduct.md
    - Roadmap: community/roadmap.md
    - FAQ: community/faq.md

# Plugins
plugins:
  - search
  - mkdocstrings:
      default_handler: python
      handlers:
        python:
          rendering:
            show_source: true
  - minify:
      minify_js: true
      minify_css: true

# Extra
copyright: 'Copyright &copy; 2024 Chronovyan Team'
extra:
  social:
    - icon: fontawesome/brands/github
      link: https://github.com/chronovyan/chronovyan
    - icon: fontawesome/brands/discord
      link: https://discord.gg/chronovyan
    - icon: fontawesome/brands/twitter
      link: https://twitter.com/chronovyan

extra_css:
  - css/extra.css

extra_javascript:
  - js/extra.js

# Build time
strict: true
use_directory_urls: true
