// Test of variables and control flow in Chronovyan

// Variable declarations and assignments
var counter = 1;
var max = 5;
var message = "Counting: ";

// Control flow with a while loop
print("Starting loop...");
while (counter <= max) {
    if (counter % 2 == 0) {
        print(message + counter + " (even)");
    } else {
        print(message + counter + " (odd)");
    }
    counter = counter + 1;
}

// Final check
print("Loop completed. Final counter value: " + counter);

// Simple conditional
if (counter > max) {
    print("Counter exceeded maximum value as expected.");
} else {
    print("Error: Counter did not exceed maximum value.");
} 